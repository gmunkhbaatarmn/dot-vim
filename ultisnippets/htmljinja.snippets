snippet html
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>${1:Page title}</title>
</head>
<body>
$0
</body>
</html>
endsnippet

snippet title
<title>${0:`!v substitute(Filename('', 'Page Title'), '^.', '\u&', '')`}</title>
endsnippet

snippet meta
<meta name="${1:name}" content="${0:content}"/>
endsnippet

snippet css
<link rel="stylesheet" href="$0">
endsnippet

snippet cssi
<style>
	$0
</style>
endsnippet

snippet js
<script src="$0"></script>
endsnippet

snippet jsi
<script>
	$0
</script>
endsnippet

snippet clr
<div style="clear:both"></div>
endsnippet

snippet nbsp
