#             Jinja snippets
# --------------------------------------

snippet {             " Jinja variable  " i
{{ ${0:${VISUAL}} }}
endsnippet

snippet %             " Jinja operation " i
{% ${0:${VISUAL}} %}
endsnippet

snippet #             " Jinja comment   " i
{# ${0:${VISUAL}} #}
endsnippet

snippet extends
{% extends ${0:"Layout.html"} %}
endsnippet

snippet include
{% include "$0" %}
endsnippet

snippet block
{% block ${1:content} %}
${0:${VISUAL}}
